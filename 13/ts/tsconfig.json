{
    "compilerOptions": {
  
      "target": "es2016",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
  
      "baseUrl": "./src",
      "declaration": true,
      "outDir": "./dist",
      "sourceMap": true,
    }
  }
  